<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/form.css" >
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <div class="add-products-title">
            <h1><% if (editing) { %>Edit product<% } else { %>Create Product<% } %></h1>
        </div>
        <form action="/<% if (editing) { %>edit-products/<%= product._id %>?edit=true<% } else { %>add-product<% } %>" method="POST" class="input-container">
            <div>
                <label for="title">Title</label>
                <input name="title" id="title" type="text" value="<% if (editing) { %><%= product.title %><% } %>" />
            </div>
            <div>
                <label for="imageUrl">Image URL</label>
                <input name="imageUrl" id="imageUrl" type="text" value="<% if (editing) { %><%= product.imageUrl %><% } %>" />
            </div>
            <div>
                <label for="price">Price</label>
                <input name="price" id="price" type="number" step="0.01" value="<% if (editing) { %><%= product.price %><% } %>" />
            </div>
            <div>
                <label for="description">Description</label>
                <textarea name="description" id="description" type="text"><% if (editing) { %><%= product.description %><% } %></textarea>
            </div>
            <button type="submit"><% if (editing) { %>Update Product<% } else { %>Add Product<% } %></button>
        </form>

    </main>
    
<%- include('../includes/end.ejs') %>